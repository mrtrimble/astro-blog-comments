---
const { comments } = Astro.props;
---

<dl class="container">
  {
    comments?.length ? (
      comments.map((comment) => (
        <div>
          <dt>{comment.author}</dt>
          <dd>posted {comment.timestamp}</dd>
          <dd>{comment.content}</dd>
        </div>
      ))
    ) : (
      <div>
        <dt>There are no comments</dt>
      </div>
    )
  }
</dl>

<style scoped>
  .container {
    width: min(calc(100% - 1rem), 50ch);
    margin-inline: auto;
  }

  dl {
    > div {
      background: gainsboro;
      padding: 1rem;
    }
    > div + div {
      margin-block-start: 1rem;
    }
    dt {
      font-weight: 900;
    }
    dd {
      padding: 0;
      margin: 0;
    }
  }
</style>